@using Frutables.Areas.Admin.ViewModels.ProductVMs
@model CreateProductVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Main image</label>
                    <input asp-for="MainImage" class="form-control">
                    <span class="text-danger my-1" asp-validation-for="MainImage"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span class="text-danger my-1" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Price</label>
                    <input asp-for="Price" class="form-control" placeholder="Price">
                    <span class="text-danger my-1" asp-validation-for="Price"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Category</label>
                    <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
                    <span class="text-danger my-1" asp-validation-for="CategoryId"></span>
                </div>
                <button class="btn btn-primary me-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>