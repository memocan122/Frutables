@using Frutables.Areas.Admin.ViewModels.CategoryVMs
@model UpdateCategoryVm

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                </div>
                <div class="form-group">
                    <span class="text-danger m-2" asp-validation-for="Name"></span>
                    <button class="btn btn-primary me-2" type="submit">Submit</button>
                    <a class="btn btn-light" asp-action="index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
